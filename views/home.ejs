     let table = document.getElementById("table").rows;
     table[1].cells[0].style.backgroundColor = "#03254c";
     table[2].cells[0].style.backgroundColor = "#1167b1";
     table[3].cells[0].style.backgroundColor = "#1167b1";
     table[9].cells[0].style.backgroundColor = "#A91B0D";
     table[10].cells[0].style.backgroundColor = "#A91B0D";

     for(let i = 0; i<table.length; i++){
          if(table[i].cells[1].innerHTML === "Jezero"){
               for(let j = 1; j<table[i].cells.length; j++){
               table[i].cells[j].style.backgroundColor = "rgb(92,174,244)";
               }
          }
     }
</script>

